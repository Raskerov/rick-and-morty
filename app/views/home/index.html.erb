<h1><%= link_to "Rick & Morty API data visualizer", root_path %></h1>

<p> Hero search. Enter name or status (or both) and press button</p>
<div>
    <%= form_tag search_path, method: "get", class: "form-inline" do %>
    <%= text_field_tag :name, nil, class: "form-control", placeholder: "Name" %>
    <%= select_tag :status, options_for_select(['alive', 'dead', 'unknown']), :prompt => "Choose hero status", class: "form-control" %>
    <%= submit_tag "Show characters", name: nil, class: "btn btn-primary" %>
    <% end %>
</div>

<% if @characters.empty? %>
  <h3>No record found</h3>
<% else %>
  <% @characters.each do |hero| %>
    <div style="margin-top: 10px; border: 2px solid black; padding: 10px; width: 25%; position: relative;">
      <img src="<%= hero[:image] %>" alt="Hero image" height="100" width="100" style='position: absolute; right: 5px; top: 5px;'>
      <p>Name: <%= hero[:name] %></p>
      <p>Status: <%= hero[:status] %></p>
      <p>Species: <%= hero[:species] %></p>
      <p>Gender: <%= hero[:gender] %></p>
      <p>Location: <%= hero[:location] %></p>
    </div>
  <% end %>
<% end %>
